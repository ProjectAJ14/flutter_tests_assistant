<idea-plugin>
    <id>com.github.projectaj14.fluttertestsassistant</id>
    <name>Flutter Tests Assistant</name>
    <vendor>Nonstop IO</vendor>
    <depends>com.intellij.modules.platform</depends>
    <description><![CDATA[
    Generates test files for your Flutter and Dart projects with ease.
    ]]>
    </description>
    <actions>
        <action id="com.github.projectaj14.fluttertestsassistant.actions.CreateFlutterTestFileAction"
                class="com.github.projectaj14.fluttertestsassistant.actions.CreateFlutterTestFileAction"
                text="Create Flutter Test File"
                description="Create a matching test file for the current Dart file">
            <add-to-group group-id="NewGroup" anchor="first"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="control alt T"/>
        </action>
    </actions>
</idea-plugin>
